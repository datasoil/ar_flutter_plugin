<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cod_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="6dp"
        android:text="Asset Code"
        android:background="#DD222222"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="9dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/extra_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#DD555555"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/function_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp"
            android:text="Function - category"
            android:textSize="9dp"
            android:textColor="#FFFFFF"
            />

        <LinearLayout
            android:id="@+id/events_row"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="0dp">

            <ImageView
                android:id="@+id/events_icon"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/alert_white" />

            <TextView
                android:id="@+id/events_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:text="Events"
                android:textColor="#ffffff"
                android:textSize="9dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/events_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingTop="0dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:text="No events actually"
            android:textColor="#FFFFFF"
            android:textSize="8dp" />

        <LinearLayout
            android:id="@+id/tickets_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="0dp">

            <ImageView
                android:id="@+id/tickets_icon"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/maint_white" />

            <TextView
                android:id="@+id/tickets_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:text="Tickets"
                android:textColor="#ffffff"
                android:textSize="9dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tickets_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:text="No tickets actually"
            android:textColor="#FFFFFF"
            android:textSize="8dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/main_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00000000"
        app:srcCompat="@drawable/ar_icon" />

</LinearLayout>